generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  username String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  todos Todo[]
}

model Todo {
  id String @id @default(cuid())

  text      String
  completed Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
